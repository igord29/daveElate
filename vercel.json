{
  "version": 2,
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "AVATAR_API_KEY": "@avatar-api-key",
    "OPENAI_API_KEY": "@openai-api-key",
    "DAVE_MODEL": "gpt4o",
    "NODE_ENV": "production"
  }
}
